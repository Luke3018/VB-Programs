	<path d="M 180 130 L 200 95 L 400 95 L 450 130" style="fill:blue"/>
	<ellipse cx="240" cy="110" rx="19" ry="11" />
	<ellipse cx="300" cy="110" rx="19" ry="11" />
	<ellipse cx="360" cy="110" rx="19" ry="11" />

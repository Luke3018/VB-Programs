<?xml version="1.0" standalone="no"?>
<svg width="700" height="550" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">

<g id ="sceneOne">
<animate id="one" attributeName="opacity" from="1" to="1" dur="20s"/>
<g id="background">
	<path d="M 0 0 L 700 0 L 700 300 L 0 300" fill="url(#grad1)"/>
	<circle cx="-5" cy="10" r="120" style="fill:orange"/>
	<path d="M 0 300 L 700 300 L 700 500 L 0 500" style="fill:green"/>
	<path d="M 100 320 C 100 150, 250 100, 250 320" fill="green" stroke="black"/>
	<path d="M 400 320 C 400 100, 550 100, 550 320" fill="green" stroke="black"/>
	<use href="#cloud" x="-150" y="-100"/>
	<use href="#cloud" x="-0" y="-150"/>
	<use href="#cloud" x="-300" y="-40"/>
</g>
<g transform="translate(-350 250)" id="boat">
	<path d="M 150 130 L 500 130 L 450 180 L 160 180 " style="fill:red"/>
	<path d="M 180 130 L 200 95 L 400 95 L 450 130" style="fill:blue"/>
	<ellipse cx="240" cy="110" rx="19" ry="11" />
	<ellipse cx="300" cy="110" rx="19" ry="11" />
	<ellipse cx="360" cy="110" rx="19" ry="11" />
	<path d="M 150 100 L 180 100 L 180 130 L 165 130 L 165 110 L 150 110" style="fill:brown"/>
	<animateMotion attributeType="XML" from="150 0" to="900 0" dur="16s" fill="freeze"/>
</g>

<g id="person" transform="translate(-300 -200)">	
	<path d="M 200 200 L 200 240" stroke="black" stroke-width="4"/>
	<path d="M 180 215 L 220 215" stroke="black" stroke-width="4"/>
	<path d="M 190 270 L 200 240" stroke="black" stroke-width="4"/>
	<path d="M 210 270 L 200 240" stroke="black" stroke-width="4"/>
	<path d="M 200 220 L 300 400" stroke="blue" stroke-width="5"/>
	<path d="M 230 150 L 200 215" stroke="black" stroke-width="4"/>
	<path d="M 200 210 L 155 150" stroke="black" stroke-width="4"/>
	<circle cx="200" cy="190" r="10"/>
	<ellipse cx="190" cy="150" rx="40" ry="10" style="fill:white"/>
	
	<animateMotion path="M 0 200 C 60 160, 120 155, 180 160 C 240 200, 300 160, 360 155 C 420 160, 480 200, 540 160 C 600 155, 660 160, 720 200
		C 780 160, 840 155, 900 160" dur="19s"/>
</g>

<g id="water">
	<path d="M-5 550 C -5 500, 1 500, 1 440 C0,400 100,400 100,440 C100,400 200,400 200,440 C 200 400, 300 400, 300 440 C 300 400, 400 400, 400 440
		C 400 400, 500 400, 500 440 C 500 400, 600 400, 600 440 C 600 400, 700 400, 700 440 C 700 400, 750 400, 750 550" fill="url(#cwater)"/>
	<animateMotion attributeType="XML" path="M -5 0 L -4 -8 L -5 0" dur="2s" repeatCount="indefinite"/>
</g>

<g id="cloud">
	<ellipse cx="200" cy="100" rx="90" ry="10" fill="white" opacity="0.8"/>
	<ellipse cx="250" cy="90" rx="90" ry="10" fill="white" opacity="0.9"/>
	<animateMotion path="M -100 80 L 600 100" dur="10s" repeatCount="indefinite"/>
</g>

<defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:rgb(0,  0, 255);stop-opacity:1" />
      <stop offset="100%" style="stop-color:rgb(255, 255, 255);stop-opacity:1" />
    </linearGradient>
  </defs>
 
 <defs>
    <linearGradient id="cwater" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:rgb(0, 0, 255);stop-opacity:1" />
      <stop offset="100%" style="stop-color:rgb(0, 0, 139);stop-opacity:1" />
    </linearGradient>
  </defs>
 </g>
<!--==============================================================-->

<g id="scenetwo" opacity="0">
<animate id="two" attributeType="XML" attributeName="opacity" from="1" to="1" dur="19s" begin="one.end"/>
<g id="background">
	<path d="M 0 0 L 700 0 L 700 300 L 0 300" fill="url(#sky)"/>
	<circle cx="-5" cy="10" r="120" style="fill:orangeRed"/>
	<path d="M 0 300 L 700 300 L 700 500 L 0 500" fill="lightslategrey"/>
	<use href="#building" x="190" />
	<use href="#building" x="-200"/>
	<use href="#markings" x="-100"/>
	<use href="#windows" x="190"/>
	<use href="#windows" x="-200"/>
</g>

 <g id="building">
	<path d="M 390 100 L 500 100 L 500 300 L 390 300" fill="dimgrey" stroke="black"/>
	<rect  x="430" y="230" width="35"  height="100" fill="darkred"/>
</g>

<g id="windows">
	<rect  x="405" y="110" width="30"  height="30" fill="yellow"/>
	<rect  x="450" y="110" width="30"  height="30" fill="yellow"/>
	<rect  x="405" y="150" width="30"  height="30" fill="yellow"/>
	<rect  x="450" y="150" width="30"  height="30" fill="yellow"/>
	<rect  x="405" y="190" width="30"  height="30" fill="yellow"/>
	<rect  x="450" y="190" width="30"  height="30" fill="yellow"/>
	<animate id="lights" attributeType="XML" attributeName="opacity" from="0" to="1" dur="12s" begin="one.end"/> 
</g>

 <g id="markings">
	<path d="M 0 280 L 800 280 L 800 360 L 0 360"/>
	<rect x="5" y="310" width="80" height="15" fill="white"/>
	<rect x="105" y="310" width="80" height="15" fill="white"/>
	<rect x="205" y="310" width="80" height="15" fill="white"/>
	<rect x="305" y="310" width="80" height="15" fill="white"/>
	<rect x="405" y="310" width="80" height="15" fill="white"/>
	<rect x="505" y="310" width="80" height="15" fill="white"/>
	<rect x="605" y="310" width="80" height="15" fill="white"/>
 </g>
 
<g transform="translate(-350 250)" id="boat">
	<path d="M 150 130 L 500 130 L 450 180 L 160 180 " style="fill:red"/>
	<path d="M 180 130 L 200 95 L 400 95 L 450 130" style="fill:blue"/>
	<ellipse cx="240" cy="110" rx="19" ry="11" />
	<ellipse cx="300" cy="110" rx="19" ry="11" />
	<ellipse cx="360" cy="110" rx="19" ry="11" />
	<path d="M 150 100 L 180 100 L 180 130 L 165 130 L 165 110 L 150 110" style="fill:brown"/>
	<animateMotion attributeType="XML" from="150 0" to="900 0" begin="one.end" dur="18s" fill="freeze"/>
</g>

<g id="water">
	<path d="M-5 550 C -5 500, 1 500, 1 440 C0,400 100,400 100,440 C100,400 200,400 200,440 C 200 400, 300 400, 300 440 C 300 400, 400 400, 400 440
		C 400 400, 500 400, 500 440 C 500 400, 600 400, 600 440 C 600 400, 700 400, 700 440 C 700 400, 750 400, 750 550" fill="url(#cwater)"/>
	<animateMotion attributeType="XML" path="M -5 0 L -4 -8 L -5 0" dur="2s" repeatCount="indefinite"/>
</g>
 <defs>
    <linearGradient id="cwater" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:rgb(0, 0, 255);stop-opacity:1" />
      <stop offset="100%" style="stop-color:rgb(0, 0, 139);stop-opacity:1" />
    </linearGradient>
  </defs>
  
 <defs>
    <linearGradient id="sky" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:rgb(0,0,0);stop-opacity:1" />
      <stop offset="100%" style="stop-color:rgb(255,255,255);stop-opacity:1" />
    </linearGradient>
 </defs>
 </g>
 
